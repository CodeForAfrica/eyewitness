{
	"uri": "/activities",
	"type": "basic",
	"prompt": {
		"type": "options",
		"text": [{
			"conditional": "!<lastChosenActivity>",
			"value": "What would you like to do?"
		}, {
			"conditional": "<lastChosenActivity>",
			"value": "In the meantime, what would you like to do?"
		}],
		"options": [{
			"label": "Submit a tip",
			"conditional": "<lastChosenActivity> !== `submit a tip`",
			"matches": {
				"submit a tip": "string",
				"submit tip": "string",
				"tip": "string"
			},
			"nextUri": "/activities/set-conversation-open"
		}, {
			"label": "See latest stories",
			"conditional": "<lastChosenActivity> !== `see latest stories`",
			"matches": {
				"see latest stories": "string",
				"see stories": "string",
				"stories": "string",
				"latest stories": "string",
				"more stories": "string",
				"see latest articles": "string",
				"see articles": "string",
				"articles": "string",
				"latest articles": "string",
				"more articles": "string",
				"see latest news": "string",
				"see news": "string",
				"news": "string",
				"latest news": "string",
				"more news": "string"
			},
			"nextUri": "/activities/set-conversation-open"
		}, {
			"label": "Advertise",
			"conditional": "<lastChosenActivity> !== `advertise`",
			"matches": {
				"advertise": "string",
				"advertising": "string",
				"adverts": "string"
			},
			"nextUri": "/activities/set-conversation-open"
		}, {
			"label": "Other",
			"conditional": "<lastChosenActivity> !== `other`",
			"matches": {
				"other": "string"
			},
			"nextUri": "/activities/set-conversation-open"
		}],
		"memory": {
			"lastChosenActivity": {
				"regexp": "(.+)",
				"required": true
			}
		},
		"errorMessage": "Please tap one of the options provided."
	}
}
